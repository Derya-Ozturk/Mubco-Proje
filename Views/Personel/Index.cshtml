@using Mubco_Proje.Models
@model List<Personel>  
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Personeller</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.PerID</td>
            <td>@x.Ad</td>
            <td>@x.Soyad</td>
            <td>@x.Sehir</td>
            <td>@x.Birim</td>
            <td><a href="/Personel/PersonelSil/?id=@x.PerID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Personel/PersonelGetir/?id=@x.PerID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }


</table>

<a href="/Personel/YeniPersonel/" class="btn btn-primary">Yeni Personel</a>

